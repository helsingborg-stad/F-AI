{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2017",
      "WebWorker"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "remove",
    "strict": true,
    "noEmit": true,
    "compileOnSave": true,
    "paths": {
      "$lib/*": [
        "./src/lib/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-svelte-plugin"
      }
    ]
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte"
  ],
  "exclude": [
    "node_modules"
  ],
  "exclude": [
    "node_modules",
    "public",
    "dist",
    "cypress"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
